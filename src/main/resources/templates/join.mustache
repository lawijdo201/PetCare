{{>layout/header}}
<h1>회원가입</h1>
<div class="wrap">
    <form action="http://localhost:8090/loginPage/join" method="post">
        <div class="login">
            <h2>Join</h2>
            <div class="join_id">
                <h4>ID</h4>
                <input type="text" name="id" placeholder="ID">
            </div>
            <div class="join_email">
                <h4>e-mail</h4>
                <input type="email" name="email" placeholder="e-mail">
            </div>
            <div class="join_pw">
                <h4>Password</h4>
                <input type="password" name="pw" placeholder="Password">
            </div>
            <div class="submit">
                <button type="submit">회원가입</button>
            </div>
        </div>
    </form>
</div>
    </form>
{{>layout/footer}}
