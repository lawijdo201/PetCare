{{>layout/header}}

<div class="layout">
    <h1 class="d-flex justify-content-center">로그인 페이지</h1>
    <div class="d-flex justify-content-center">
        <form action="/logindo" method="post">
            <br>
            <div class="d-flex flex-row bd-highlight mb-3">
                <div class="d-flex p-2 bd-highlight"><h4>ID</h4></div>
                <div class="d-flex p-2 bd-highlight ms-auto"><input type="text" name="username" id="username" placeholder="아이디"></div>
            </div>
            <div class="d-flex flex-row bd-highlight mb-3">
                <div class="d-flex p-2 bd-highlight"><h4>Password</h4></div>
                <div class="d-flex p-2 bd-highlight ms-auto"><input type="password" name="pw" id="pw" placeholder="비밀번호"></div>
            </div>
            <div>
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                <input type="submit" class="btn btn-dark" value="로그인">
                <input type="button" class="btn btn-dark" value="회원가입" onclick="join()">
                <input type="button" class="btn btn-dark" value="네이버 로그인" onclick="joinByNaver()">
                <input type="button" class="btn btn-dark" value="구글 로그인" onclick="joinByGoogle()">
            </div>
        </form>
    </div>
    <script>
        function join(){
            window.location.href='/join';
        }
        function joinByNaver(){
            window.location.href='/oauth2/authorization/naver'
        }
        function joinByGoogle(){
            window.location.href='/oauth2/authorization/google'
        }
    </script>
</div>
{{>layout/footer}}
