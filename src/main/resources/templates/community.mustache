{{>layout/header}}
<style>
    .layout {
        width: 500px;
        margin: 0 auto;
        margin-top: 40px;
    }
</style>
<div class="layout">
    <h1>community</h1>
    <button onclick="writeBoard()" class="btn btn-dark">글 작성</button>
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
            <th>글번호</th>
            <th>제목</th>
            <th>내용</th>
            <th>작성자</th>
        </thead>
        {{#list}}
            <tr>
                <td>{{{id}}}</td>
                <td><a href="view?id={{id}}">{{{title}}}</a></td>
                <td>{{content}}</td>
                <td>{{userEntity.username}}</td>
            </tr>
        {{/list}}
    </table>
    <div>
        {{#hasPrev}}
            <a href="?page={{previous}}">이전</a>
        {{/hasPrev}}
        {{^hasPrev}}
            이전
        {{/hasPrev}}
        {{#page.num}}
            <a href="list?page={{.}}">{{.}}</a>
        {{/page.num}}
        {{#hasNext}}
            <a href="?page={{next}}">다음</a>
        {{/hasNext}}
        {{^hasNext}}
            다음
        {{/hasNext}}
    </div>
</div>
<script>
    function writeBoard(){
        window.location.href = 'write';
    }
</script>
{{>layout/footer}}
